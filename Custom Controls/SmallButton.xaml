<UserControl x:Class="EducationWPF.Custom_Controls.SmallButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EducationWPF.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="80"
             x:Name="_SmallButton">
    <Grid>
        <Image Source="{Binding ElementName=_SmallButton, Path=ImageSource}"/>
        <TextBlock Text="{Binding ElementName=_SmallButton, Path=Text}"/>
    </Grid>
</UserControl>
