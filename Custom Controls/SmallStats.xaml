<UserControl x:Class="EducationWPF.Custom_Controls.SmallStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EducationWPF.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             x:Name="_SmallStats">
    <Grid>
        <Border CornerRadius="5" Background="#E6E5E7">
            <StackPanel>
                <Image Source="{Binding ElementName=_SmallStats, Path=ImageSource}" Height="20" Width="20" HorizontalAlignment="Left" Margin="5,5,0,0"/>
                <TextBlock Margin="10,10,5,0" Text="{Binding ElementName=_SmallStats, Path=Stats}" FontWeight="Bold"/>
                <TextBlock Margin="10,5,5,0"  Text="{Binding ElementName=_SmallStats, Path=Label}" Foreground="#C0BFC0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
