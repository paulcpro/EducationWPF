<UserControl x:Class="EducationWPF.Custom_Controls.SmallStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EducationWPF.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="50"
             x:Name="_SmallStats">
    <Grid>
        <StackPanel>
            <Image Source="{Binding ElementName=_SmallStats, Path=ImageSource}"/>
            <TextBlock Text="{Binding ElementName=_SmallStats, Path=Stats}" />
            <TextBlock Margin="0,25,0,0" Text="{Binding ElementName=_SmallStats, Path=Label}" Foreground="#C0BFC0"/>
        </StackPanel>
    </Grid>
</UserControl>
