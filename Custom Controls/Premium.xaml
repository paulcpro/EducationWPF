<UserControl x:Class="EducationWPF.Custom_Controls.Premium"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EducationWPF.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="200"
             x:Name="_Premium">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding ElementName=_Premium, Path=Days}" Foreground="OrangeRed" Grid.Column="0"/>
        <TextBlock Text="{Binding ElementName=_Premium, Path=GetIt}" Grid.Column="0"/>
        <Button Height="30" Width="80" Margin="10,30,10,0" Content="{Binding ElementName=_Premium, Path=TextButton}" Foreground="OrangeRed" Grid.Column="0"/>
        <Image Source="{Binding ElementName=_Premium, Path=PremiumSource}" Grid.Column="1"/>
    </Grid>
</UserControl>
