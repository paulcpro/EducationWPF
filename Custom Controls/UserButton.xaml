<UserControl x:Class="EducationWPF.Custom_Controls.UserButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EducationWPF.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="100"
             x:Name="_UserButton">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="{Binding ElementName=_UserButton, Path=UserSource}" Grid.Column="0" Grid.Row="2"/>
        <TextBlock Text="{Binding ElementName=_UserButton, Path=Name}" Grid.Row="0" Grid.Column="1" />
        <TextBlock Text="{Binding ElementName=_UserButton, Path=NickName}" Grid.Row="1" Grid.Column="1" />
        <Image Source="{Binding ElementName=_UserButton, Path=OptionsSource}" Grid.Column="2" Grid.RowSpan="2"/>
    </Grid>
</UserControl>
